@model AviaSales.Models.Flight

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Flight</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FlightNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FlightNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DepartureDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DepartureDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ArrivalDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ArrivalDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DepartureAirport)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DepartureAirport.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ArrivalAirport)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ArrivalAirport.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Plane)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Plane.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ActualDeparture)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ActualDeparture)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ActualArrival)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ActualArrival)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cost)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cost)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.FlightId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>

<h4>Tickets</h4>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Plane.Tickets.First().TicketId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Plane.Tickets.First().PurchaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Plane.Tickets.First().SeatNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Plane.Tickets.First().User)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Plane.Tickets.First().Class)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Plane.Tickets)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TicketId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PurchaseDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SeatNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.User.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Class.Name)
                </td>
            </tr>
        }
    </tbody>
</table>
